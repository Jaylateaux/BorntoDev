        <Label Content="คุณต้องเก็บเงินทั้งหมด" HorizontalAlignment="Left" Margin="166,137,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2" FontSize="14" FontFamily="Arial"/>
        <TextBox x:Name="txtDays" HorizontalAlignment="Left" Height="23" Margin="31,140,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82" Grid.Column="1" FontSize="14" IsHitTestVisible="False" IsEnabled="False" Background="#FFFFF644" FontFamily="Arial" TextAlignment="Center"/>
        <Label Content="วัน" HorizontalAlignment="Left" Margin="118,137,0,0" VerticalAlignment="Top" Grid.Column="1" FontSize="14" FontFamily="Arial"/>

    </Grid>
</Window>
