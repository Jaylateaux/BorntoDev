        <Label Content="รายได้" HorizontalAlignment="Left" Margin="72,29,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Arial"/>
        <Label Content="รายจ่าย" HorizontalAlignment="Left" Margin="72,60,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="Arial"/>
        <TextBox x:Name="txtIncome" HorizontalAlignment="Left" Height="23" Margin="182,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Grid.ColumnSpan="2" FontSize="14" FontFamily="Arial" TextAlignment="Center"/>
